<!-- template   基本使用-->
<!-- template包着内容，在没有被使用之前是不会渲染的 -->
<!-- 直接 -->
<template name="contentItem">
  <button class="btn">Hi</button>
  <view>Hello</view>
</template>
<template is="contentItem" />
<!-- 可以转入值方式 -->
<template name="contentItem1">
  <button class="btn">{{BtnText}}</button>
  <view>{{content}}</view>
</template>
<template is="contentItem1" data="{{BtnText:'警告',content:'呵呵呵'}}"/>