<!--pages/tabbar/tabbar.wxml-->
<view class="weui-tabbar">
  <view class="weui-tabbar__item weui-bar__item_on">
    <view style="display: inline-block; position: relative;" bindtap="handleClickWx">
      <image src="/assets/icon_tabbar.png" alt class="weui-tabbar__icon" />
      <text class="weui-badge" style="position: absolute; top: -2px; right: -13px;">8</text>
      <view class="weui-tabbar__label">微信</view>
    </view>
  </view>
  <view class="weui-tabbar__item">
    <image src="/assets/icon_tabbar.png" alt class="weui-tabbar__icon" bindtap="handleClickMailist"></image>
    <view class="weui-tabbar__label">通讯录</view>
  </view>
  <view class="weui-tabbar__item">
    <view style="display: inline-block; position: relative;">
      <image src="/assets/icon_tabbar.png" alt class="weui-tabbar__icon" bindtap="handleClickFind"></image>
      <text class="weui-badge weui-badge_dot" style="position: absolute; top: 0; right: -6px;"></text>
        <view class="weui-tabbar__label">发现</view>
    </view>
  </view>
  <view class="weui-tabbar__item">
    <image src="/assets/icon_tabbar.png" alt class="weui-tabbar__icon" bindtap="handleClickMe"></image>
    <view class="weui-tabbar__label">我</view>
  </view>
</view>
